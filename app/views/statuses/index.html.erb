<div class="row">
  <div class="col s12 m12">
    <%= render 'form' %>

    <% @statuses.each do |status| %>
      <div class="card">
        <div class="card-content white-text">
          <span class="card-title"><%= status.user_id %></span>
          <p class="status-body"><%= status.body %></p>
        </div>
        <div class="card-action">
          <a href="#" class="vertical-align-middle">良いね！</a>
          <%= link_to '詳細', status_path(status), class: 'vertical-align-middle' %>
          <span class="status-footer"><i class="material-icons vertical-align-middle">
          thumb_up
          </i>0 person like this</span>
          <span class="status-footer"><i class="material-icons vertical-align-middle">
          chat_bubble
          </i>1 comments</span>
          <span class="status-footer"><i class="material-icons vertical-align-middle">
          access_time
          </i>about 1 month ago</span>
        </div>
      </div>
    <% end %>
  </div>
</div>