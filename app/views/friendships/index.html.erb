<h1>友達リスト</h1>
<div class="card">
  <div class="card-content">
    <table class="striped">
      <thead>
      <tr>
        <th>Name</th>
        <th>Status</th>
        <th>Action</th>
      </tr>
      </thead>

      <tbody>
      <% @friends.each do |friend| %>
        <tr>
          <td><%= friend.user.name %></td>
          <td>友達です</td>
          <td><%= link_to '友達を解除', users_path, class: 'btn btn-remove' %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>