<h1>友達リスト</h1>
<div class="card">
  <div class="card-content">
    <table class="striped">
      <thead>
      <tr>
        <th>Name</th>
        <th>Status</th>
        <th>Action</th>
      </tr>
      </thead>

      <tbody>
      <% @friends.each do |friend| %>
        <tr>
          <td><%= get_friend_name(friend) %></td>
          <td><%= get_status(friend) %></td>
          <% if request_is_in_progress?(friend.id) %>
            <td></td>
          <% else %>
            <td><%= link_to '友達を解除', friendship_path(friend), method: :delete, class: 'btn btn-remove', :data => {:confirm => "本当に解除しますか？"} %></td>
          <% end %>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>