<div id="login-form">
  <h1>Login</h1>

  <%= form_for @form, url: :session do |form| %>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= form.label :email %>
      </div>
      <div class="col-sm-12">
        <%= form.email_field :email, class: 'form-control', placeholder: "Enter email" %>
      </div>
    </div>
    <div class="form-group">
      <div class="cotrol-label col-sm-2">
        <%= form.label :password %>
      </div>
      <div class="col-sm-12">
        <%= form.password_field :password, class: 'form-control', placeholder: "Enter password" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-8 col-sm-offset-2">
        <%= submit_tag "Login", class: 'waves-effect waves-light btn' %>
      </div>
    </div>
  <% end %>
  <div>
    <%= link_to "[アカウントを作成する]", new_user_path %>
  </div>
</div>
