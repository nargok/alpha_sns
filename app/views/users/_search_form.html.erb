<div class="card">
  <div class="card-content">
    <%= form_for @form, url: :search do |form| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :name %>
        </div>
        <div class="col-sm-12">
          <%= form.text_field :name, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-8 col sm-offset-2">
          <%= submit_tag "検索", class: 'waves-effect waves-light btn' %>
        </div>
      </div>
    <% end %>
  </div>
</div>