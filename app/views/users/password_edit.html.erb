<div class="card">
  <div class="card-content">
    <%= form_for @user do |form| %>
      <div class="form-group">
        <%= form.label :password %>
        <%= form.password_field :password, placeholder: "新しいパスワードを入力" %>
      </div>
      <div class="form-group">
        <%= form.label :password_confirmation %>
        <%= form.password_field :password_confirmation, placeholder: "新しいパスワードを入力" %>
      </div>
      <div class="form-group">
        <%= button_tag class: 'waves-effect waves-light btn' do %>
          <i class="material-icons">
            create
          </i>
          更新する
        <% end %>
        <%= link_to "キャンセル", user_path(@user) %>
      </div>
    <% end %>
  </div>
</div>
