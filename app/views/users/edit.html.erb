<%= form_for @user do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div class="form-group">
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>
  <div class="form-group">
    <%= button_tag class: 'waves-effect waves-light' do %>
      <i class="material-icons">
        create
      </i>
      更新する
    <% end %>
    <%= link_to "キャンセル", user_path(@user) %>
  </div>
<% end %>